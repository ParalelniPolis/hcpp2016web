<section id="schedule">
  <div class="container">
    <!-- Title & Subtitle -->
    <div class="row">
      <div class="col-md-12">
        <div class="section-title">
          <h2 class="text-center"><span>Schedule</span></h2>
          <p class="subtitle text-center">Satisne ergo pudori consulat, si quis sine teste libidini pareat</p>
          <p class="subtitle text-center"><i class="fa fa-angle-down fa-lg"></i></p>
        </div>
      </div>
    </div>
    <!-- /.Title & Subtitle -->
    <!-- Timeline -->
    <div id="timeline">
      {{#forEach smallSchedule}}
        {{#if valid}}
          <!-- Timeline Item -->
          <div class="timeline-item">
            <div class="timeline-icon"> <i class="fa fa-star fa-lg"></i> </div>
            <div class="timeline-content {{#ifEven index}}right{{/ifEven}}">
              <h2>{{title}}</h2>
              <p class="text-big text-center text-bold">{{format_start_time}}</p>
              {{#each speakers}}
                <p class="text-center text-bold"><img src="{{image}}" alt="{{full_public_name}}" class="img-responsive center-block img-circle img-speaker">
                  {{full_public_name}}
                </p>
              {{/each}}
              <p>{{abstract}}</p>
              <span class="label label-main">{{room.name}} - (~{{duration}}mins)</span> </div>
          </div>
          <!-- /.Timeline Item -->
        {{/if}}
      {{/forEach}}

      <!-- Timeline Full Schedule Link -->
      <div class="timeline-item">
        <div class="timeline-icon"> <a href="/schedule"><i class="fa fa-angle-double-down fa-2x"></i></a> </div>
      </div>
      <!-- /.Timeline Full Schedule Link -->
    </div>
    <!-- /.Timeline -->
  </div>
  <!-- /.container -->
</section>
